


<div id="main-container" 
    class="container">
    <div>
    <div class="jumbotron jumbotron-fluid hero">
      <p class="display-6 text-black d-none d-sm-block text-center"
      >Welcome to Rate The Food</p>
      <nav>
          <a href="/profile">My Profile</a>
          <button id="logout">logout</button>
      </nav>
      <hr class="my-4">
      <div class="col">

        {{#if isloggedin}}
        
          
          <a href="/logout"> 
          <button type="btn" 
          class="btn btn-red">
          Logout</button></a>
          <footer class="blockquote-footer text-black text-center">
          Upon creating account, you will be able to keep your feedback on record.
          </footer>

        {{else}}
          <p class="display-5 text-black text-center">
            Let's begin with your Food Adventure.

            <br>

            Ready to start? -> 
            <a class="signup" 
            >Create Account</a> to begin your Food Adveture
            </p>

       

        <h5 id="if-login-err"
        class="text-center"></h5>
      </div>
    </div>
  </div>

   <div class="row likefood">
        <div class="col">
        <h1 class="strong lead text-black text-center">
            Because who doesn't like food right?</h1>
        </div>
    </div>

    <div>
      <ol class="postList">
        {{#each post }}
        <li>
          <article class="post">
           <h2 ><a href="/post/{{id}}">{{title}}</a></h2>
           <p>{{post_text}}</p>
          </article>
        </li>
        {{/each}}
      </ol>
    </div>
    
    <script src="/js/logout.js"></script>
     


