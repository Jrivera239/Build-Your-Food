<div class= "container">
  <header align= "center" class= "header-wrap">
    <h2 class= "text-black">Foodie Account Information
    </h2>
    {{#if loggedIn}}
     <div class= "welcome">
      <h3>{{username}}</h3>
      
        <form class="addPost">
          <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title"/> 
          </div>
          <div>
            <label for="post_text">Content:</label>
            <input type="text" id="post_text" name="post_text"/>
          </div>
          <button type="submit" class=" btn btn-danger createPost">Create Post</button>
        </form>
      
      
     </div>
     {{/if}}
  </header>
{{#each posts as |post|}}
    <div class="form-row">
      <div class="form-group col-md-8 post">
        <h2><a href="/profile/edit/{{post.id}}">{{title}}</h2>
        <p><a href="/"{{post_text}}</p>
        <p>{{comment.comment_text}}</p>
      </div>
      </div>
      {{/each}}
      
<script src="/js/addPost.js"></script>

