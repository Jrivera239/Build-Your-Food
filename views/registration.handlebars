          <div class="form-group col-md-8">
            <h4>Create Your Account!</h4>
            <label class="text-black" 
            for="username">Username:</label>
            <input type="text"
            class="form-control" 
            id="username-signup'" 
            placeholder="Enter Username">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-8">

            <label class="text-black" 
            for="Email">Email:</label>
            <input type="email"
            class="form-control" 
            id="email-signup" 
            placeholder="Enter Email">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-8">

            <label class="text-black"
            for="Password">Password:</label>
            <input type="password"
             class="form-control"
              id="password-signup" 
              placeholder="Enter Password Here">
          </div>
        </div>


        <div><h4 id="strong message"></h4></div>
         <button type="submit"
          id="add-user" 
          class="btn btn-red">Submit
         </button>
      </form>
