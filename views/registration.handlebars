<div class="container">
  <div class="row">
    <div class="col col-md-8">
      <header class="create-user-wrap header-wrap"
       align="center">
        <h1 class="text-black"
        >Login to Your Foodie Account</h1>
        <h4 id="create-err-msg"></h4>
      </header>

      <h4 id="msg-err"></h4>
      <form id= "create-form">
        <div class="form-row">
          <div class="form-group col-md-8">

            <label class="text-black" 
            for="username">Username:</label>
            <input type="text"
            class="form-control" 
            id="username-login" 
            placeholder="Enter Username">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-8">

            <label class="text-black" 
            for="Email">Email:</label>
